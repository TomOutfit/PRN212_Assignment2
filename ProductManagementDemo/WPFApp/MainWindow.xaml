<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="Product Management" Height="670" Width="710">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0099FF" Offset="0"/>
                <GradientStop Color="#FF347BDA" Offset="0.794"/>
                <GradientStop Color="#FF60B1E7" Offset="1"/>
                <GradientStop Color="#FF596FDD" Offset="0.309"/>
                <GradientStop Color="#FF472FDE" Offset="0.484"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="label" Content="Product Management" Grid.Column="0" Grid.Row="0"
               FontSize="36" Grid.ColumnSpan="2" HorizontalAlignment="Center"
               Foreground="White" VerticalAlignment="Center"/>

        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Product ID" Grid.Row="0" Grid.Column="0" Margin="2,2,2,2" Foreground="White"/>
            <TextBox x:Name="txtProductID" Grid.Row="0" Grid.Column="1" Margin="0,4,2,4" IsEnabled="False" Background="#EEE"/>

            <Label Content="Product Name" Grid.Row="1" Grid.Column="0" Margin="2,2,2,2" Foreground="White"/>
            <TextBox x:Name="txtProductName" Grid.Row="1" Grid.Column="1" Margin="0,4,2,4"/>

            <Label Content="Price" Grid.Row="2" Grid.Column="0" Margin="2,2,2,2" Foreground="White"/>
            <TextBox x:Name="txtPrice" Grid.Row="2" Grid.Column="1" Margin="0,4,2,4"/>

            <Label Content="Units In Stock" Grid.Row="3" Grid.Column="0" Margin="2,2,2,2" Foreground="White"/>
            <TextBox x:Name="txtUnitsInStock" Grid.Row="3" Grid.Column="1" Margin="0,4,2,4"/>

            <Label Content="Category" Grid.Row="4" Grid.Column="0" Margin="2,2,2,2" Foreground="White"/>
            <ComboBox x:Name="cboCategory" Grid.Row="4" Grid.Column="1" Margin="0,4,2,4"/>
        </Grid>

        <DataGrid x:Name="dgData" Margin="10" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                  SelectionChanged="dgData_SelectionChanged"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}" Width="Auto"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Units In Stock" Binding="{Binding UnitsInStock}" Width="Auto"/>
                <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat=N2}" Width="Auto"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Margin="10">
            <Button x:Name="btnCreate" Content="Create" Width="100" Height="30" Margin="5" Click="btnCreate_Click" Background="#FF0099FF" BorderBrush="White" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="btnUpdate" Content="Update" Width="100" Height="30" Margin="5" Click="btnUpdate_Click" Background="#FF1B7140" BorderBrush="White" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="btnDelete" Content="Delete" Width="100" Height="30" Margin="5" Click="btnDelete_Click" Background="#FFA500" BorderBrush="White" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="btnClose" Content="Close" Width="100" Height="30" Margin="5" Click="btnClose_Click" Background="#FFEF8F18" BorderBrush="White" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>